<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/search"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/trans_back"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/linear_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/text_prof_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingLeft="10dp"
                    android:text="SaiCharan Lanka"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_prof_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Edit"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_horizontal_below"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_horizontal"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_prof_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="99xxxxxxxx"
                    android:textColor="@color/bg"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/divide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    "
                    android:textColor="@color/bg"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_prof_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mryummy@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/linear_horizontal_below"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

            <LinearLayout
                android:id="@+id/account_layout"
                android:layout_below="@+id/linear_horizontal_below"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                    <!--<android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview_expand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                      -->


                <TextView
                    android:id="@+id/text_myaccount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="My Account"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:drawablePadding="20dp"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_manage_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Manage Addresss"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@drawable/ic_home_black_24dp"
                    android:layout_marginLeft="15dp"
                    android:drawablePadding="20dp"
                    android:textAllCaps="false"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/text_favourites"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Favorites"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_favorite_black_24dp"
                    android:layout_marginLeft="15dp"
                    android:drawablePadding="20dp"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/text_change_pwd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Change Password"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                    android:layout_marginLeft="15dp"
                    android:drawablePadding="20dp"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:textStyle="normal" />

            </LinearLayout>

            <View
                android:id="@+id/line_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/account_layout"
                android:layout_marginTop="10dp"
                android:background="@color/black" />


            <LinearLayout
                android:id="@+id/linear_help"
                android:layout_below="@+id/line_1"
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Help"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/faqs"
                    android:textColor="@color/light_black"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:textStyle="bold" />
</LinearLayout>

            <View
                android:id="@+id/line_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linear_help"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_below="@+id/line_2"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <TextView
                    android:id="@+id/text_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LogOut"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_weight="1.8"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_logout"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/logoff"
                    android:layout_weight="0.2" />


            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
