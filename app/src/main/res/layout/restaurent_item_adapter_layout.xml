<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:fitsSystemWindows="true"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/lll3"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/l"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/img_icon_veg"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/veg"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_icon_nonveg"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/nonveg"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/item_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.8"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text=""
                    android:textColor="@color/bg"
                    android:textSize="10sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/img_lov_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/love"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/img_lov_icon_select"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/love_select"
                    android:visibility="gone" />

              <!--  <com.like.LikeButton
                    android:id="@+id/likeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    app:icon_size="2dp"
                    app:icon_type="heart" />-->

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/linear_buttons_select_3"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/item_add"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="80dp"
                    android:background="@drawable/add_button_design"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="ADD"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/button_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="80dp"
                    android:background="@drawable/add_button_design"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/bSub"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tvDisplay"
                        android:layout_width="30dp"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/bAdd"
                        android:layout_width="15dp"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp" />

                </LinearLayout>
