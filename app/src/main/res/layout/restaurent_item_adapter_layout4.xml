<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/tools"
        android:background="@color/white"
        android:orientation="horizontal"
        android:id="@+id/main_layout">

        <LinearLayout
            android:id="@+id/ll9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lll3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp"

                android:gravity="center">

                <LinearLayout
                    android:id="@+id/l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/img_icon_veg"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:src="@drawable/veg"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/img_icon_nonveg"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:src="@drawable/nonveg"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text="Chicken Biryani Biryani BiryaniBiryani"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/item_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text="Indian"
                        android:textColor="@color/light_black"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text="88"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/img_lov_icon"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/love"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_lov_icon_select"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/love_select"
                        android:visibility="gone" />

                    <!-- <com.like.LikeButton
                         android:id="@+id/star_button"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         app:icon_size="2dp"
                         app:icon_type="heart" />-->

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/linear_buttons_select_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/item_add"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/add_button_design"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text="ADD"
                        android:textColor="@color/colorPrimary"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/button_layout"
                        android:layout_marginLeft="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:visibility="visible"
                        android:gravity="center"
                        android:background="@drawable/add_button_design"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:id="@+id/bSub"
                            />
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/black"
                            android:id="@+id/tvDisplay"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="15dp" />
                        <TextView
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:id="@+id/bAdd"
                            />

                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>