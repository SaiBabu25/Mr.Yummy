<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp">

    <TextView
        android:layout_toRightOf="@+id/list_item_genre_icon"
        android:id="@+id/list_item_genre_name"
        android:layout_width="match_parent"
        android:gravity="center|left"
        android:layout_alignBaseline="@+id/list_item_genre_icon"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:text="Title" />

    <ImageView
        android:id="@+id/list_item_genre_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/arrow_down_selected" />


    <LinearLayout
        android:id="@+id/linear_horizontal_below"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_genre_name"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Address,Payments,Favourites,Offers,ChangePasword"
            android:textColor="@color/light_black"
            android:textSize="10sp"
            android:textStyle="normal" />

    </LinearLayout>

   </RelativeLayout>